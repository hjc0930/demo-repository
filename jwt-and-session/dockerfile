# build stage
FROM node:20-alpine as build-stage

WORKDIR /app

COPY package.json .

RUN npx pnpm install --registry=https://registry.npmmirror.com/

COPY . .

RUN npm run build

# production stage
FROM node:20-alpine as production-stage

WORKDIR /app

COPY --from=build-stage /app/dist /app
COPY --from=build-stage /app/package.json /app

RUN npx pnpm install --production --registry=https://registry.npmmirror.com/

EXPOSE 3000

CMD ["node", "/app/main.js"]